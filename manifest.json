{
    "manifest_version": 3,
    "name": "leetcode-scraper",
    "description": "by me for me",
    "version": "1.0",
    "icons": {
        "16": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.leetcode.com/*"],
            "js": ["script.js"]
        }
    ],
    "permissions": [
        "tabs",
        "nativeMessaging",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}
